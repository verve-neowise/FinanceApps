<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_pressed="true" android:drawable="@drawable/quiz_state_pressed" />
    <item android:state_pressed="false" android:drawable="@drawable/quiz_state_default"/>
    <item android:state_selected="true" android:drawable="@drawable/quiz_state_selected"/>
    <item android:state_active="true" android:drawable="@drawable/quiz_state_success"/>
    <item android:state_enabled="true" android:drawable="@drawable/quiz_state_wrong"/>
    <item android:state_enabled="false" android:drawable="@drawable/quiz_state_disabled"/>
</selector>