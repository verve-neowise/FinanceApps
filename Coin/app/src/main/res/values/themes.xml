<resources>
    <style name="Base.Theme.Coin" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">#6DBCFF</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:colorPrimary">@color/accent</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/secondary</item>
    </style>

    <style name="Base.Theme.Coin.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@drawable/textfield_border_color</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">#fff</item>
    </style>

    <style name="Base.Theme.Coin.AautocompleteTextView" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@drawable/textfield_border_color</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
</resources>